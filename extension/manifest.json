{
  "manifest_version": 3,
  "name": "CopiMon - Realtime Clipboard Rooms",
  "version": "1.0.0",
  "description": "Share copied text across browsers in realtime rooms. Minimal, no auth.",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://*/",
    "http://*/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "CopiMon"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}


